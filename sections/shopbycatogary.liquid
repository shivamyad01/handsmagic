<!-- sections/shop-by-category.liquid -->
<div class="shop-by-category-wrapper" style="background: #ffe6e1; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 style="text-align: center; font-size: 32px; font-weight: 700; margin-bottom: 40px; color: #5e2b31;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="category-grid" style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">
      {% for block in section.blocks %}
        <div class="category-item" style="width: 30%; min-width: 280px; border-radius: 12px; overflow: hidden; position: relative; text-align: center;">
          {% if block.settings.collection != blank %}
            <a href="{{ block.settings.collection.url }}">
          {% endif %}
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 600 }}" alt="Category Image" style="width: 100%; height: auto; display: block;">
              {% endif %}
          {% if block.settings.collection != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Shop By Category",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Shop By Category"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Link to Collection"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Shop By Category",
      "category": "Custom",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}
